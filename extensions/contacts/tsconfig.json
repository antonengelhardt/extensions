{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*.ts", "src/**/*.tsx", "raycast-env.d.ts"],
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "lib": ["ES2023"],
    "module": "commonjs",
    "target": "ES2023",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
